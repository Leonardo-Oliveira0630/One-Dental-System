
{
  "appId": "com.mytooth.eco",
  "appName": "My Tooth",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "allowNavigation": ["*"]
  },
  "plugins": {
    "Haptics": {
      "enabled": true
    },
    "StatusBar": {
      "overlaysWebView": true,
      "style": "DARK"
    },
    "Camera": {
      "presentationStyle": "fullscreen"
    },
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#0f172a",
      "showSpinner": true,
      "androidScaleType": "CENTER_CROP"
    }
  }
}
